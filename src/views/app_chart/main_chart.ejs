   <form ng-submit="submit()">
                <div class="form-group">
                    <input required ng-disabled="g_insert_lock_fields" name="task" ng-model="task"  type="text" class="form-control" id="task" placeholder="Type your task here.">
                </div>
            <button type="submit" id="submit"  class="btn btn-sm btn-default" ng-disabled="g_insert_lock_fields">Insert</button>
    </form>

<hr/> 

<div style="padding-left:5%">
    <div style="width: 95%;" ng-controller="mainController">
    <ul class="list-group">
        <li class="list-group-item list-group-item-info" ng-repeat="task in data">
        {{task.id}} | {{task.tarefa}} <a ng-click="remove(task.id)">Delete</a>
        </li>
        <li  class="list-group-item" ng-if="results.length === 0">
        <strong>No results found...</strong>
        </li>
    </ul>
    </div>
</div>

<hr/>