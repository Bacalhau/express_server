<div class="container-login">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title"><strong>Sign In </strong></h3></div>
                <div class="panel-body">
                    <form ng-submit="submit()">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            <input ng-disabled="g_login_lock_fields" type="email" ng-model="email"  name="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password <a href="#!/forgotpassword">(forgot password)</a></label>
                            <input ng-disabled="g_login_lock_fields" name="password" ng-model="password"  type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                        </div>
                        <button ng-disabled="g_login_lock_fields" type="submit" id="submit"  class="btn btn-sm btn-default" ng-disabled="isDisabled">Sign in</button>
                        <a href="#!/register" role="button" class="btn btn-sm btn-default pull-right">Register</a>
                        
                         
                    </form>
                    </div>
                    
                    <div>
                        <div class="alert alert-danger" role="alert"  ng-show="g_login_error">
                                <div>{{message}}</div>
                        </div>
                         
                    </div>

                    <div>
                        <div class="alert alert-info" role="alert"  ng-show="g_login_wait">
                                Wait while we check your account and load your application.
                        </div>
                         
                    </div>
                        

                </div>
        </div>
    </div>
