<div class="container-login">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title"><strong>Sign In </strong></h3></div>
                <div class="panel-body">
                    <form ng-submit="submit()">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Username or Email</label>
                            <input type="email" ng-model="email"  name="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password <a href="#!/forgotpassword">(forgot password)</a></label>
                            <input name="password" ng-model="password"  type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                        </div>
                        <button type="submit" id="submit"  class="btn btn-sm btn-default" ng-disabled="isDisabled">Sign in</button>
                    </form>
                    </div>
                    
                    <div>
                        <div class="alert alert-danger" role="alert"  ng-hide="hide_error">
                                ERROR on Login
                        </div>
                         
                    </div>
                        

                </div>
        </div>
    </div>
