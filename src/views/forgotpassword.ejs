<div class="container-login">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title"><strong>Sign In </strong></h3></div>
                <div class="panel-body">
                    <form ng-submit="submit()" ng-controller="mainController">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Username or Email</label>
                            <input type="email" ng-model="email"  name="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
                        </div>                        
                        <button type="submit" id="submit"  class="btn btn-sm btn-default" ng-disabled="isDisabled">Recovery</button>
                    </form>
                </div>
        </div>
    </div>
</div>
